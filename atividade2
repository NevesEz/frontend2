let totalAulas = parseInt(prompt("Informe o número de aulas do semestre:"));
let faltas = parseInt(prompt("Informe o número de faltas do aluno:"));
let notaP1 = parseFloat(prompt("Informe a primeira nota (P1):"));
let notaP2 = parseFloat(prompt("Informe a segunda nota (P2):"));

let percentualPresenca = ((totalAulas - faltas) / totalAulas) * 100;

let media = (notaP1 + notaP2) / 2;
let notaRecuperacao = null;
let situacaoFinal = "";

if (percentualPresenca < 75) {
  situacaoFinal = "Reprovado por falta";
} else {
  if (media >= 7) {
    situacaoFinal = "Aprovado";
  } else if (media >= 5 && media < 7) {
    notaRecuperacao = parseFloat(
      prompt("Aluno em recuperação. Informe a nota da recuperação:")
    );
    let mediaFinal = (media + notaRecuperacao) / 2;
    if (mediaFinal >= 5) {
      situacaoFinal = "Aprovado na recuperação";
    } else {
      situacaoFinal = "Reprovado na recuperação";
    }
  } else {
    situacaoFinal = "Reprovado por nota";
  }
}

console.log("Número de aulas do semestre:", totalAulas);
console.log("Número de faltas do aluno:", faltas);
console.log("Percentual de presença do aluno:", percentualPresenca.toFixed(2) + "%");
console.log("Primeira nota (P1):", notaP1);
console.log("Segunda nota (P2):", notaP2);
console.log(
  "Nota complementar (recuperação):",
  notaRecuperacao !== null ? notaRecuperacao : "Não foi necessária"
);
console.log("Situação final do aluno:", situacaoFinal);
